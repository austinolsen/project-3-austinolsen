<% if current_user %>
  <nav><%= current_user.name %>(<%= current_user.id %>)<a href="/logout" class="btn btn-info"><strong>Logout</strong></a></nav>
<% else %>
  <nav>Already have a list?<a href="/login" class="btn btn-info"><strong>Login</strong></a></nav>
<% end %>
<h1>Profile page</h1>

<div class="row">
    <%= form_tag('/search', method: "get", id: "item-search") do %>
    <%= text_field_tag :search, params[:search_term], placeholder: "Search Items", required: true %>
    <%= submit_tag("Search") %>
  <% end %>
</div>


<div class="row">
  <% if @items_list.nil?  %>
    Empty
    <% else %>
    <p><% @items_list.each do |i| %>
      <div class="col-md-3 items">
      <ul>
        <li><img src="<%= i["LargeImage"].first[1]%>" height=150></img></li>
        <li><strong><%= i["ItemAttributes"]["Title"].first(136) %><strong></li>
        <li><a href="<%= i["DetailPageURL"] %>">Amazon Product Page</a></li>
        <li><button class="btn btn-info">Save</button></li>
      </ul>
    </div>
    <% end %></p>
  <% end %>
</div>
